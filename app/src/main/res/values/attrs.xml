<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="AspectRatioImageView">
        <attr name="aspectRatio" format="float"/>
    </declare-styleable>

    <attr name="colorAccentedSurface" format="reference"/>
    <attr name="colorDivider" format="reference"/>
    <attr name="colorIcon" format="reference"/>

    <declare-styleable name="CircleImageView">
        <attr name="cv_borderColor" format="reference"/>
        <attr name="cv_borderWidth" format="dimension"/>
        <attr name="highlightEnable" format="boolean"/>
        <attr name="highlightColor" format="color"/>
    </declare-styleable>

    <attr name="colorEvaluationStart" format="reference"/>
    <attr name="colorEvaluationEnd" format="reference"/>
    <attr name="colorItemBackground" format="reference"/>
    <attr name="colorGrayDark" format="reference"/>

    <declare-styleable name="AvatarImageView">
        <attr name="aiv_borderColor" format="color"/>
        <attr name="aiv_borderWidth" format="dimension"/>
        <attr name="aiv_initials" format="string"/>
    </declare-styleable>

